<%= stylesheet_link_tag 'buttons', :plugin => 'redmine_oauth2_login' %>

<% if Setting.plugin_redmine_oauth2_login['enabled'] %>
  <%= link_to oauth2_login_path(:provider => Setting.plugin_redmine_oauth2_login['provider'], :back_url => back_url) do %>
    <%= button_tag :class => 'button-login' do %>
      <%= image_tag('/plugin_assets/redmine_oauth2_login/images/sjtu.png', :class => 'button-login-icon', :alt => l(:login_via_oauth)) %>
      <%= content_tag :div, l(:login_via_oauth), :class => 'button-login-text' %>
    <% end %>
  <% end %>
<% end %>
